{
  "name": "dannydeclient",
  "version": "1.0.9",
  "description": "simple electron wrapper for sharkord instance",
  "repository": {
    "type": "git",
    "url": "https://github.com/carfizzi/dannydeclient"
  },
  "license": "ISC",
  "author": "Marco",
  "type": "commonjs",
  "main": "main.js",
  "build": {
    "appId": "com.dannydeclient.app",
    "directories": {
      "output": "out/make/appimage"
    },
    "linux": {
      "target": "AppImage"
    },
    "files": [
      "!**/*.pak",
      "!locales/*"
    ]
  },
  "scripts": {
    "start": "electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make-win": "electron-forge make --platform win32 --arch x64",
    "make-linux": "electron-forge make --platform linux --arch x64 && npm run build-linux",
    "build-linux": "electron-builder build --linux appimage --x64 --publish never",
    "make-darwin": "electron-forge make --platform darwin --arch arm64",
    "make-all": "npm run make-win && npm run make-linux && npm run make-darwin"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.11.1",
    "@electron-forge/plugin-fuses": "^7.11.1",
    "@electron/fuses": "^1.8.0",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.8.3"
  }
}
